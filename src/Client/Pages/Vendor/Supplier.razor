@page "/counter"
@page "/counter/{Id?}"
@inject HttpClient Http

<PageTitle> @TitleText Supplier</PageTitle>

<div class="row mb-4">
 
<h2>@TitleText Supplier</h2>

   <EditForm  class="row" Model="@supplierModel" OnInvalidSubmit=@InvalidFormSubmitted OnValidSubmit="@ValidFormSubmitted">
    <DataAnnotationsValidator />
     <div class="col-md-6 col-lg-6 col-sm-12 mb-5">
         <div class="mb-3 row">
             <div>
                   <label for="Name" class="form-label">Name * </label>
                   <input id="Name" name="@supplierModel.Name" class="form-control" @bind="@supplierModel.Name">
                    <ValidationMessage For="@(() => supplierModel.Name)"/>
             </div>
             <div class="mt-2">
                  <label for="AddressLine1" class="form-label">Address Line1 * </label>
                    <textarea class="form-control" @bind="@supplierModel.AddressLine1" />
                    <ValidationMessage For="() => supplierModel.AddressLine1"/>
             </div>
              <div class="mt-2">
                  <label for="AddressLine1" class="form-label">Address Line2 * </label>
                    <textarea class="form-control" @bind="@supplierModel.AddressLine2" />
                    <ValidationMessage For="() => supplierModel.AddressLine1"/>
             </div>

              <div class="mt-2 row">
                  <div class="col-md-6">
                       <label for="Name" class="form-label">City * </label>
                       <input id="Name" name="@supplierModel.City" class="form-control" @bind="@supplierModel.City">
                        <ValidationMessage For="@(() => supplierModel.City)"/>
                  </div>

                    <div class="col-md-6">
                       <label for="Name" class="form-label">Postal Code * </label>
                       <input id="Name" name="@supplierModel.PostalCode" class="form-control" @bind="@supplierModel.PostalCode">
                        <ValidationMessage For="@(() => supplierModel.PostalCode)"/>
                  </div>
             </div>

             <div class="mt-3">
                  <label for="state" class="form-label">Sate* </label>
                    <select name="@supplierModel.StateId" @bind="@supplierModel.StateId" class="form-control">
                        @foreach (var state in stateLists)
                        {
                            <option value="@state.Id">@state.Name</option>
                        }
                    </select>
                    <ValidationMessage For="@(() =>supplierModel.StateId)" />
             </div>

         </div>
         <div class ="row">
              <div class="col-3 gap-1">
               <button class="btn btn-outline-info"  type="submit">@BtnText </button>
              </div>
              <div class="col-3">
               <button class="btn btn-outline-dark"  type="button" @onclick="ResetForm" >Cancel</button>
                </div>
         </div>
     </div>
  </EditForm>

</div>



